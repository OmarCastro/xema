{
  "name": "xema",
  "version": "0.5.0-SNAPSHOT",
  "description": "A schema validator with subset checking and data generation",
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "nyc mocha",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OmarCastro/xema.git"
  },
  "author": "Omar Castro",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OmarCastro/xema/issues"
  },
  "homepage": "https://github.com/OmarCastro/xema#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov": "^1.0.0",
    "eslint": "^4.14.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "standard": "^10.0.3"
  },
  "files": [
    "lib/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "include": [
      "lib/**/!(*.test.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "docs/reports/coverage"
  }
}
