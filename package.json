{
  "name": "xema",
  "version": "0.3.0",
  "description": "A schema validator with subset checking and data generation",
  "main": "./lib/main.js",
  "types": "./lib/main.d.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "nyc mocha",
    "report-coverage": "nyc report --reporter=lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OmarCastro/xema.git"
  },
  "author": "Omar Castro",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OmarCastro/xema-js/issues"
  },
  "homepage": "https://github.com/OmarCastro/xema-js#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "codecov": "^1.0.0"
  },
  "nyc": {
    "check-coverage": true,
    "all": true,
    "extension": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ],
    "include": [
      "lib/**/!(*.test.*).[tj]s?(x)"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "docs/reports/coverage"
  }
}
